{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "bun-types"],

    // Strict type checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Module resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Emit configuration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    // Path mapping (monorepo structure)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/apps/*": ["apps/*"],
      "@/packages/*": ["packages/*"],
      "@/services/*": ["services/*"]
    },

    // Additional options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "apps/**/*",
    "packages/**/*",
    "services/**/*",
    "scripts/**/*",
    "tests/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".git",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}