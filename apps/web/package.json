{
  "name": "@ccwrapper/web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "test": "bun test src",
    "test:unit": "bun test src/**/*.test.ts",
    "test:coverage": "bun test --coverage src",
    "test:watch": "bun test --watch src",
    "type-check": "astro check",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\""
  },
  "dependencies": {
    "astro": "^5.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^3.6.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
