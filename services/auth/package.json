{
  "name": "@cc-wrapper/auth",
  "version": "0.1.0",
  "type": "module",
  "description": "Authentication service for CC Wrapper",
  "main": "src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --sourcemap",
    "test": "bun test",
    "test:unit": "bun test src/**/*.test.ts",
    "test:coverage": "bun test --coverage",
    "lint": "bunx eslint src --max-warnings 0",
    "lint:fix": "bunx eslint src --fix",
    "format": "bunx prettier --write src",
    "format:check": "bunx prettier --check src",
    "type-check": "bun run db:generate && bunx tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@cc-wrapper/shared-types": "workspace:*",
    "@prisma/client": "^6.18.0",
    "elysia": "^1.4.12",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.18.0",
    "typescript": "^5.9.3"
  }
}
